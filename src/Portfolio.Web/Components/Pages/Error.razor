@page "/Error"
@page "/Error/{StatusCode:int}"
@using System.Diagnostics
@using Portfolio.Web.Models
@inject IWebHostEnvironment Environment

<PageTitle>@ErrorTitle</PageTitle>

<div class="error-container">
    <div class="error-content">
        <div class="error-icon">
            @if (StatusCode == 404)
            {
                <div class="icon-404">
                    <div class="number">4</div>
                    <div class="circle"></div>
                    <div class="number">4</div>
                </div>
            }
            else
            {
                <div class="icon-general">
                    <div class="exclamation">!</div>
                </div>
            }
        </div>

        <h1 class="error-title">@ErrorTitle</h1>
        <p class="error-message">@ErrorMessage</p>

        @if (ShowDetails && ErrorResponse != null)
        {
            <div class="error-details">
                <p class="error-id">
                    <strong>Error ID:</strong> <code>@ErrorResponse.ErrorId</code>
                </p>
                @if (!string.IsNullOrEmpty(ErrorResponse.Details))
                {
                    <details class="error-stack">
                        <summary>Technical Details</summary>
                        <pre>@ErrorResponse.Details</pre>
                    </details>
                }
            </div>
        }
        else if (ShowRequestId)
        {
            <p class="error-id">
                <strong>Reference ID:</strong> <code>@RequestId</code>
            </p>
        }

        <div class="error-actions">
            <a href="/" class="btn-primary">Go Home</a>
            <button class="btn-secondary" @onclick="GoBack">Go Back</button>
        </div>
    </div>
</div>

<style>
    .error-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--spacing-xl);
        text-align: center;
    }

    .error-content {
        max-width: 600px;
        animation: fadeIn 0.5s ease;
    }

    .error-icon {
        margin-bottom: var(--spacing-2xl);
    }

    .icon-404 {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: var(--spacing-md);
        font-size: 6rem;
        font-weight: 100;
        color: var(--color-primary);
    }

    .icon-404 .circle {
        width: 100px;
        height: 100px;
        border: 4px solid var(--color-primary);
        border-radius: 50%;
        position: relative;
        animation: float 3s ease-in-out infinite;
    }

    .icon-404 .circle::before,
    .icon-404 .circle::after {
        content: '';
        position: absolute;
        background: var(--color-primary);
        border-radius: 50%;
    }

    .icon-404 .circle::before {
        width: 20px;
        height: 20px;
        top: 25px;
        left: 20px;
        animation: blink 4s infinite;
    }

    .icon-404 .circle::after {
        width: 20px;
        height: 20px;
        top: 25px;
        right: 20px;
        animation: blink 4s 0.2s infinite;
    }

    .icon-general {
        width: 120px;
        height: 120px;
        margin: 0 auto;
        border: 4px solid var(--color-accent-pink);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: pulse 2s ease-in-out infinite;
    }

    .icon-general .exclamation {
        font-size: 4rem;
        font-weight: 300;
        color: var(--color-accent-pink);
    }

    .error-title {
        font-size: var(--font-size-section-title);
        font-weight: var(--font-weight-section-title);
        color: var(--color-heading);
        margin-bottom: var(--spacing-lg);
    }

    .error-message {
        font-size: var(--font-size-body);
        color: var(--color-text);
        margin-bottom: var(--spacing-2xl);
        line-height: 1.6;
    }

    .error-details {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-md);
        padding: var(--spacing-lg);
        margin-bottom: var(--spacing-2xl);
        text-align: left;
    }

    .error-id {
        font-size: 0.875rem;
        color: var(--color-text-light);
        margin-bottom: var(--spacing-md);
    }

    .error-id code {
        background: rgba(255, 255, 255, 0.05);
        padding: 0.25rem 0.5rem;
        border-radius: var(--border-radius-sm);
        font-family: 'Courier New', monospace;
        color: var(--color-primary);
    }

    .error-stack {
        margin-top: var(--spacing-md);
    }

    .error-stack summary {
        cursor: pointer;
        color: var(--color-primary);
        margin-bottom: var(--spacing-md);
        user-select: none;
    }

    .error-stack summary:hover {
        color: var(--color-primary-hover);
    }

    .error-stack pre {
        background: rgba(0, 0, 0, 0.3);
        padding: var(--spacing-md);
        border-radius: var(--border-radius-sm);
        overflow-x: auto;
        font-size: 0.875rem;
        line-height: 1.5;
        color: var(--color-text-light);
    }

    .error-actions {
        display: flex;
        gap: var(--spacing-md);
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary,
    .btn-secondary {
        padding: var(--spacing-sm) var(--spacing-xl);
        border-radius: var(--border-radius-md);
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: var(--transition-base);
        border: none;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background: var(--color-primary);
        color: white;
    }

    .btn-primary:hover {
        background: var(--color-primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .btn-secondary {
        background: var(--color-surface);
        color: var(--color-text);
        border: 1px solid var(--color-border);
    }

    .btn-secondary:hover {
        background: var(--color-border);
        transform: translateY(-2px);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    @@keyframes blink {
        0%, 45%, 55%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
    }

    @@media (max-width: 768px) {
        .icon-404 {
            font-size: 4rem;
        }

        .icon-404 .circle {
            width: 70px;
            height: 70px;
        }

        .icon-404 .circle::before,
        .icon-404 .circle::after {
            width: 15px;
            height: 15px;
        }

        .error-title {
            font-size: 2rem;
        }

        .error-message {
            font-size: 1rem;
        }
    }
</style>

@code {
    [Parameter]
    public int? StatusCode { get; set; }

    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);
    private ErrorResponse? ErrorResponse { get; set; }

    private string ErrorTitle => StatusCode switch
    {
        404 => "Page Not Found",
        401 => "Unauthorized",
        403 => "Forbidden",
        500 => "Server Error",
        _ => "Oops! Something Went Wrong"
    };

    private string ErrorMessage => StatusCode switch
    {
        404 => "The page you're looking for seems to have wandered off into the digital void.",
        401 => "You need to be authenticated to access this resource.",
        403 => "You don't have permission to access this resource.",
        500 => "Our servers encountered an unexpected error. We're on it!",
        _ => "Don't worry, we're working to fix the issue. Please try again later."
    };

    private bool ShowDetails => Environment.IsDevelopment() && ErrorResponse != null;

    protected override void OnInitialized()
    {
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;

        // Try to get error response from HttpContext
        if (HttpContext?.Items.TryGetValue("ErrorResponse", out var errorResponse) == true)
        {
            ErrorResponse = errorResponse as ErrorResponse;
        }

        // If no status code parameter, try to get from HttpContext
        if (!StatusCode.HasValue && HttpContext?.Response.StatusCode != null)
        {
            StatusCode = HttpContext.Response.StatusCode;
        }
    }

    private void GoBack()
    {
        // Use JavaScript interop to go back
        // NavigationManager.NavigateTo() doesn't support going back
    }
}
